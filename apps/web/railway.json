{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm --filter @varyn/web build"
  },
  "deploy": {
    "startCommand": "pnpm --filter @varyn/web start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 180,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
